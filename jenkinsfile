def TEST_STATUS = false
def BUILD_STATUS = false
pipeline {
   agent any
   stages {
       stage('test if docker file exist'){
           steps{
                   sh 'ls'
           }
       }
       stage('pull app from SC'){
           steps{
               dir('todo') {
                   git url: 'https://github.com/dobromir-hristov/todo-app.git'
                   sh 'mv ../Dockerfile .'
                   sh 'ls'
               }
                   sh 'ls'
           }
       }
        stage('app build stage') {
            steps{
                sh 'ls'
                script{
                    withEnv(["CMD=build"]) {
                        sh 'docker build -t todo-build .'
                        BUILD_STATUS = sh (
                            script: "docker run -it todo-build",
                            returnStatus: true
                        ) == 0
                    }
                    sh 'docker images'
                }
            }
        }
        stage('app testing stage') {
            when{
                expression { BUILD_STATUS }
            }
            steps {
                script{
                    withEnv(["CMD=test"]) {
                        sh 'docker build -t todo-test .'
                        TEST_STATUS = sh (
                            script: "docker run -it todo-test",
                            returnStatus: true
                        ) == 0
                    }
                    sh 'docker images'
                }
            }
        }
    }
}